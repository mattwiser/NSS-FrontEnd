extends ../template/layout

block content
  .row
    .small-12.columns
      h1.subheader Individual Post
  .row
    .small-2.columns
      a.button.expand.tiny.raidus(href='/') Home
    .small-2.columns
      a.button.expand.tiny.raidus(href='/posts') Posts
    .small-2.columns
      a.button.expand.tiny.raidus.success(href='/posts/new') New Post
    .small-6.columns
  .row
    .small-12.columns
      table(style="width:100%")
        thead
          tr
            th Title
            th Author
            th Date
            th Tags
        tbody
          tr
            td: a.button.tiny.radius.expand(href="/posts/#{post.id}")=post.title
            td=post.author
            td=post.date
            td=post.tags
      img(src=post.image)
      p=post.content