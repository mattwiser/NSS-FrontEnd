extends ../template/layout
include ../mixins/form-helper
block content
  .row
    .small-12.columns
      h1.subheader New Song
  .row
    .small-12.columns
      form(action='/songs', method='post')
        fieldset
          legend New Song
          .row
            .small-12.columns
              mixin field(4, 'title', 'Title', null, null, true)
              mixin field(4, 'duration', 'Song Duration(secs)')
              mixin field(4, 'genres', 'Genres (Blues, Rock, Country, etc)')
              mixin field(4, 'art', 'Song Image')
              mixin field(4, 'filename', 'Filename')
          .row
            .small-12.columns
              label(for='lyrics') Lyrics:
              textarea#lyrics(name='lyrics')
          .row
            .small-2.columns.small-offset-8: a.button.radius.alert.small.expand(href='/songs') Cancel
            .small-2.columns: button.radius.success.small.expand(type='submit') Save Song
