form#todo(action='/todos', method='post')
  fieldset
    legend New To Do
    .row
      mixin field(4, 'title', 'Title')
      mixin field(4, 'dueDate', 'Due Date', null, 'mm/dd/yyy')
      .small-4.columns
        select#priority-select(name="priority")
          option(selected=true) Select Priority
          each priority in priorities
            option(value=priority._id)= priority.name
    .row
      .small-2.small-offset-10.columns: button.radius.success.small.expand(type="submit") Save

