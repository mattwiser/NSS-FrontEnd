%head
  %meta{charset: "utf-8"}
  %meta{name: "viewport", content: "width=device-width"}
  %title Flickr App
  %link{rel: "stylesheet", href: "css/normalize.css"}
  %link{rel: "stylesheet", href: "css/foundation.css"}
  %link{rel: "stylesheet", href: "css/app.css"}
  %script{src: "js/vendor/custom.modernizr.js"}
%body

  .row
    .small-12.columns
      %h1 Flickr Slideshow
  .row
    .small-4.columns
      %input#query{type:'text', autofocus: true}
    .small-8.columns
      %input#search.small.button.radius{type:'button', value:'Search Flickr'}
      %input#clear.small.button.radius.alert{type:'button', value:'Clear All Photos'}
      %input#clear_selected.small.button.radius.alert{type:'button', value:'Clear Selected Photos'}
      %input#save.small.button.radius.success{type:'button', value:'Save Selected Photos'}

  .row
    .small-8.columns
      %h1.subheader Search Photos
      #photos
    .small-4.columns
      %h1.subheader Saved Photos
      #saved-photos


  %script{src: 'js/vendor/jquery-1.10.2.js'}
  %script{src: 'js/vendor/foundation.min.js'}
  %script{src: 'js/vendor/underscore.js'}
  %script{src: 'js/app/app.js'}
